<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp"
            android:id="@+id/layout2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout3"
                >

                <Button
                    android:layout_width="0dp"
                    android:background="#1ad1ff"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/cccc"
                    android:drawableTop="@drawable/login"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/green1"
                    android:layout_weight="2"
                    android:id="@+id/button2"
                    android:drawableTop="@drawable/musicc"
                    android:text="DYNAMIC"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout4">

                <Button
                    android:layout_width="0dp"
                    android:background="@color/green1"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/button3"
                    android:drawableTop="@drawable/listgrid"
                    android:text="List and Grid"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textAlignment="gravity"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="#7B90E3"
                    android:id="@+id/layout5">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/layout6"
                        android:orientation="vertical"
                        android:background="#1ad1ff"
                        android:weightSum="1">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:background="#1ad1ff"
                            android:id="@+id/button4"
                            android:drawableTop="@drawable/rowcolumn"
                            android:text="Button"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#ffffff"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:background="#1ad1ff"
                            android:id="@+id/button5"
                            android:drawableTop="@drawable/expand48"
                            android:text="Expand"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#ffffff"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:background="#1ad1ff"
                        android:id="@+id/layout7">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="79dp"
                            android:background="#1ad1ff"
                            android:layout_margin="5dp"
                            android:id="@+id/button6"
                            android:drawableTop="@drawable/buttons"
                            android:text="OTHERS"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/green1"
                            android:id="@+id/button_Settings"
                            android:layout_margin="5dp"
                            android:drawableTop="@drawable/settings2"
                            android:text="SETTINGS"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_weight="1" />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout8">

                <Button
                    android:layout_width="0dp"
                    android:background="#1ad1ff"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/button8"
                    android:drawableTop="@drawable/mao"
                    android:text="Map"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/green1"
                    android:layout_weight="2"
                    android:id="@+id/button9"
                    android:text="SQLITE"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:drawableTop="@drawable/sqlite"
                    />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#1ad1ff"
                android:id="@+id/button_upload"
                android:text="UPLOAD IMAGE"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:drawableTop="@drawable/camera"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="@color/green1"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_xmlParsing"
                    android:text="XML parsing"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/xml"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="#1ad1ff"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_xmlParsingWeb"
                    android:text="XML parsing Web"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/xmll"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="#1ad1ff"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    android:drawableTop="@drawable/json"
                    android:text="JSON Parsing"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="@color/green1"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_JsonParsingWeb"
                    android:text="JSON Parsing Web"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/json"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_GoogleMap"
                    android:background="@color/green1"
                    android:text="Google Maps"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/googlemap"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_GoogleMapRoute"
                    android:background="#1ad1ff"
                    android:text="Google Maps Route"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/maoroute"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_Recycler"
                    android:background="#1ad1ff"
                    android:text="Recycler View"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/recycler"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_fragments"
                    android:background="@color/green1"
                    android:text="Fragment"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/fragment"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_tab"
                    android:background="@color/green1"
                    android:text="TAB FRAGMENT"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/googlemap"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_NavigationDrawer"
                    android:background="#1ad1ff"
                    android:text="Navigation"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/navigation"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_sharedPreference"
                    android:background="#1ad1ff"
                    android:text="Shared Preference"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/recycler"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/button_fragment"
                    android:background="@color/green1"
                    android:text="Fragment"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/fragment"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>